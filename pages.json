{
	"easycom": {
		"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [
		//pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/login/login", //登录页

			"style": {
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/index/index", // 首页
			"style": {
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/my/my", // 我的
			"style": {
				// "navigationBarTitleText": "我",
				// "navigationBarBackgroundColor": "white",
				// "navigationBarShadow": {
				// 	"colorType": "grey"
				// }
				"navigationStyle": "custom" // 隐藏系统导航栏
			}
		},
		{
			"path": "pages/viewPlan/viewPlan", // 查看计划页
			"style": {
				"navigationStyle": "custom" // 隐藏系统导航栏
			}
		},
		{
			"path": "pages/submitIssue/submitIssue", // 问题提交页
			"style": {
				"navigationStyle": "custom" // 隐藏系统导航栏
			}
		},
		{
			"path": "pages/checkStatistics/checkStatistics", // 核查统计
			"style": {
				"navigationStyle": "custom" // 隐藏系统导航栏
			}
		},
		{
			"path": "pages/message/message", // 消息列表
			"style": {
				"navigationStyle": "custom" // 隐藏系统导航栏
			}
		},
		{
			"path": "pages/messageContent/messageContent", // 消息内容
			"style": {
				"navigationStyle": "custom" // 隐藏系统导航栏
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8",
		"rpxCalcMaxDeviceWidth": 1200, // rpx 计算所支持的最大设备宽度，单位 px，默认值为 960
		"rpxCalcIncludeWidth": 960, // rpx 计算特殊处理的值，始终按实际的设备宽度计算，单位 rpx，默认值为 750
		"rpxCalcBaseDeviceWidth": 750 // rpx 计算使用的基准设备宽度，设备实际宽度超出 rpx 计算所支持的最大设备宽度时将按基准宽度计算，单位 px，默认值为 375
	}
}
